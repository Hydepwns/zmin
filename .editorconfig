# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Zig files
[*.zig]
indent_style = space
indent_size = 4
max_line_length = 100

# Markdown files
[*.md]
indent_style = space
indent_size = 2
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4

# HTML files
[*.{html,htm}]
indent_style = space
indent_size = 2

# CSS files
[*.css]
indent_style = space
indent_size = 2

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# Makefiles (must use tabs)
[Makefile]
indent_style = tab

# Docker files
[Dockerfile]
indent_style = space
indent_size = 4

# Configuration files
[*.{toml,ini,cfg,conf}]
indent_style = space
indent_size = 4

# Documentation files
[*.{txt,rst,adoc}]
indent_style = space
indent_size = 2
max_line_length = 80