{
  "name": "zmin-dev-tools",
  "description": "Complete development toolkit for zmin JSON minification and optimization",
  "version": "1.0.0",
  "repository": "https://github.com/hydepwns/zmin",
  "homepage": "https://github.com/hydepwns/zmin",
  "license": "MIT",
  "author": "DROO / hydepwns",

  "tools": {
    "zmin": {
      "description": "Main JSON minifier with multiple optimization modes",
      "category": "core",
      "required": true,
      "executable": "zmin"
    },
    "debugger": {
      "description": "Performance analysis and debugging tool",
      "category": "development",
      "required": true,
      "executable": "debugger"
    },
    "dev-server": {
      "description": "Development server with REST API endpoints",
      "category": "development",
      "required": true,
      "executable": "dev-server"
    },
    "profiler": {
      "description": "Performance profiling and benchmarking tool",
      "category": "development",
      "required": true,
      "executable": "profiler"
    },
    "config-manager": {
      "description": "Configuration file management tool",
      "category": "utility",
      "required": false,
      "executable": "config-manager"
    },
    "plugin-registry": {
      "description": "Plugin discovery and management tool",
      "category": "utility",
      "required": false,
      "executable": "plugin-registry"
    },
    "hot-reloading": {
      "description": "File watching and auto-reload tool",
      "category": "development",
      "required": false,
      "executable": "hot-reloading"
    }
  },

  "platforms": {
    "linux": {
      "architectures": ["x86_64", "aarch64"],
      "package_format": "tar.gz",
      "install_method": "script"
    },
    "macos": {
      "architectures": ["x86_64", "aarch64"],
      "package_format": "tar.gz",
      "install_method": "script",
      "homebrew": {
        "formula_name": "zmin",
        "tap": "hydepwns/homebrew-zmin"
      }
    },
    "windows": {
      "architectures": ["x86_64"],
      "package_format": "zip",
      "install_method": "batch",
      "chocolatey": {
        "package_name": "zmin",
        "maintainer": "DROO / hydepwns"
      }
    }
  },

  "installation": {
    "requirements": {
      "minimum_os": {
        "linux": "glibc 2.17+",
        "macos": "10.12+",
        "windows": "Windows 10+"
      },
      "disk_space": "50MB",
      "memory": "128MB"
    },
    "post_install": [
      "Add bin/ directory to PATH",
      "Verify installation with --version flags",
      "Copy example configurations if needed"
    ]
  },

  "configuration": {
    "default_config_file": "zmin.config.json",
    "config_locations": [
      "./zmin.config.json",
      "~/.config/zmin/config.json",
      "/etc/zmin/config.json"
    ],
    "environment_variables": {
      "ZMIN_CONFIG": "Override config file path",
      "ZMIN_PLUGIN_PATH": "Additional plugin search paths",
      "ZMIN_LOG_LEVEL": "Set logging level (debug, info, warn, error)"
    }
  },

  "examples": {
    "basic_usage": {
      "description": "Basic JSON minification",
      "command": "zmin input.json"
    },
    "development_workflow": {
      "description": "Complete development workflow",
      "script": "examples/dev-workflow.sh"
    },
    "performance_analysis": {
      "description": "Analyze performance across modes",
      "command": "debugger -i input.json --benchmark 50"
    },
    "server_mode": {
      "description": "Start development server",
      "command": "dev-server 8080"
    }
  },

  "documentation": {
    "readme": "README.md",
    "changelog": "CHANGELOG.md",
    "api_docs": "docs/api/",
    "tool_docs": "docs/tools/",
    "examples": "examples/",
    "troubleshooting": "docs/TROUBLESHOOTING.md"
  },

  "support": {
    "issues": "https://github.com/hydepwns/zmin/issues",
    "discussions": "https://github.com/hydepwns/zmin/discussions",
    "documentation": "https://github.com/hydepwns/zmin/tree/main/docs",
    "email": "support@zmin.dev"
  },

  "build_info": {
    "zig_version": "0.14.1",
    "minimum_zig": "0.14.1",
    "build_date": "2025-07-31",
    "optimization": "ReleaseFast",
    "features": ["SIMD", "parallel", "plugins", "hot-reloading", "dev-tools"]
  },

  "package_info": {
    "binary_names": [
      "zmin",
      "debugger", 
      "dev-server",
      "profiler",
      "config-manager",
      "plugin-registry",
      "hot-reloading"
    ],
    "config_files": [
      "zmin.config.json",
      "examples/configs/zmin.config.json"
    ],
    "documentation_files": [
      "README.md",
      "docs/TROUBLESHOOTING.md",
      "docs/api/PLUGIN_API.md",
      "tools/examples/"
    ]
  }
}