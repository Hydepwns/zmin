{
  "name": "zmin",
  "displayName": "zmin - JSON Minifier",
  "description": "High-performance JSON minification with zmin integration for VS Code",
  "version": "1.0.0",
  "publisher": "zmin-team",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "json",
    "minify",
    "zig",
    "performance",
    "zmin"
  ],
  "activationEvents": [
    "onLanguage:json",
    "onCommand:zmin.minify",
    "onCommand:zmin.minifySelection"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zmin.minify",
        "title": "Minify JSON",
        "category": "zmin"
      },
      {
        "command": "zmin.minifySelection",
        "title": "Minify Selected JSON",
        "category": "zmin"
      },
      {
        "command": "zmin.validate",
        "title": "Validate JSON",
        "category": "zmin"
      },
      {
        "command": "zmin.benchmark",
        "title": "Benchmark JSON File",
        "category": "zmin"
      },
      {
        "command": "zmin.configure",
        "title": "Configure zmin",
        "category": "zmin"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "zmin",
      "properties": {
        "zmin.executable": {
          "type": "string",
          "default": "zmin",
          "description": "Path to zmin executable"
        },
        "zmin.mode": {
          "type": "string",
          "enum": ["eco", "sport", "turbo"],
          "default": "sport",
          "description": "Performance mode for minification"
        },
        "zmin.enableGpu": {
          "type": "boolean",
          "default": false,
          "description": "Enable GPU acceleration (if available)"
        },
        "zmin.streaming": {
          "type": "boolean",
          "default": false,
          "description": "Use streaming mode for large files"
        },
        "zmin.autoMinifyOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically minify JSON files on save"
        },
        "zmin.showBenchmarks": {
          "type": "boolean",
          "default": true,
          "description": "Show performance metrics after minification"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .json",
          "command": "zmin.minify",
          "group": "1_modification"
        },
        {
          "when": "editorHasSelection && resourceExtname == .json",
          "command": "zmin.minifySelection",
          "group": "1_modification"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .json",
          "command": "zmin.minify",
          "group": "2_workspace"
        }
      ]
    },
    "languages": [
      {
        "id": "zig",
        "aliases": ["Zig", "zig"],
        "extensions": [".zig"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "zig",
        "scopeName": "source.zig",
        "path": "./syntaxes/zig.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "child_process": "^1.0.2"
  }
}